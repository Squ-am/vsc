{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Squam",
  "scopeName": "source.squam",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#storage" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.squam",
          "match": "//.*$"
        },
        {
          "name": "comment.block.squam",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            { "include": "#comments" }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.squam",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.squam",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.squam",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.squam",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.squam",
          "match": "\\b0x[0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.binary.squam",
          "match": "\\b0b[01_]+\\b"
        },
        {
          "name": "constant.numeric.octal.squam",
          "match": "\\b0o[0-7_]+\\b"
        },
        {
          "name": "constant.numeric.float.squam",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9_]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.squam",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.squam",
          "match": "\\b(if|else|match|loop|while|for|in|break|continue|return)\\b"
        },
        {
          "name": "keyword.other.squam",
          "match": "\\b(use|mod|pub|as|where)\\b"
        }
      ]
    },
    "storage": {
      "patterns": [
        {
          "name": "storage.type.squam",
          "match": "\\b(fn|let|mut|const|struct|enum|trait|impl|type)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.primitive.squam",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|bool|char|str|String|Self)\\b"
        },
        {
          "name": "entity.name.type.option.squam",
          "match": "\\b(Option|Result|Some|None|Ok|Err)\\b"
        },
        {
          "name": "entity.name.type.squam",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.squam",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.squam",
          "match": "\\b(nil)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.squam",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "match": "\\b(fn)\\s+([a-z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "storage.type.function.squam" },
            "2": { "name": "entity.name.function.definition.squam" }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.squam",
          "match": "(=|\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=)"
        },
        {
          "name": "keyword.operator.comparison.squam",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.squam",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.squam",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.bitwise.squam",
          "match": "(&|\\||\\^|<<|>>)"
        },
        {
          "name": "keyword.operator.arrow.squam",
          "match": "(->|=>)"
        },
        {
          "name": "keyword.operator.range.squam",
          "match": "(\\.\\.|\\.\\.=)"
        },
        {
          "name": "keyword.operator.access.squam",
          "match": "(::|\\.)"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.squam",
          "match": "(,|;|:)"
        },
        {
          "name": "punctuation.brackets.squam",
          "match": "(\\{|\\}|\\[|\\]|\\(|\\))"
        }
      ]
    }
  }
}
